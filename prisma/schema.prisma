generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  password      String
  role          Role          @default(USER)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  firstName     String?
  lastName      String?
  boardsCreated Board[]       @relation("BoardsCreated")
  boardMembers  BoardMember[]
  propPicks     PropPick[]
  sessions      Session[]
  squares       Square[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model Board {
  id                 String        @id @default(cuid())
  name               String
  createdByUserId    String
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  /// Board type: 'SQUARES' for grid-based pools, 'PROPS' for prop bets
  type               BoardType     @default(SQUARES)

  /// If false, the board cannot be edited regardless of lock time.
  isEditable         Boolean       @default(true)
  /// If set and in the past, the board is no longer editable.
  editableUntil      DateTime?
  /// Optional limit for how many squares one email/user can claim on this board.
  /// Null means unlimited.
  maxSquaresPerEmail Int?
  createdBy          User          @relation("BoardsCreated", fields: [createdByUserId], references: [id], onDelete: Cascade)
  invites            BoardInvite[]
  members            BoardMember[]
  props              Prop[]
  propPicks          PropPick[]
  squares            Square[]

  @@index([createdByUserId])
  @@index([type])
}

model BoardMember {
  boardId   String
  userId    String
  role      BoardRole @default(MEMBER)
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  board     Board     @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@id([boardId, userId])
  @@index([userId])
}

model BoardInvite {
  id        String    @id @default(cuid())
  boardId   String
  email     String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  board     Board     @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId])
  @@index([email])
}

model Square {
  id        String   @id @default(cuid())
  row       Int
  col       Int
  userId    String?
  boardId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id])

  @@unique([boardId, row, col])
  @@index([userId])
  @@index([boardId])
}

model Prop {
  id        String       @id @default(cuid())
  boardId   String
  question  String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  board     Board        @relation(fields: [boardId], references: [id], onDelete: Cascade)
  options   PropOption[]
  picks     PropPick[]

  @@index([boardId])
}

model PropOption {
  id        String     @id @default(cuid())
  propId    String
  label     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  prop      Prop       @relation(fields: [propId], references: [id], onDelete: Cascade)
  picks     PropPick[]

  @@unique([propId, label])
  @@index([propId])
}

model PropPick {
  id        String     @id @default(cuid())
  boardId   String
  propId    String
  optionId  String
  userId    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  option    PropOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  prop      Prop       @relation(fields: [propId], references: [id], onDelete: Cascade)
  board     Board      @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([propId, userId])
  @@index([boardId])
  @@index([userId])
  @@index([optionId])
}

enum Role {
  USER
  ADMIN
}

enum BoardRole {
  OWNER
  ADMIN
  MEMBER
}

enum BoardType {
  SQUARES
  PROPS
}
