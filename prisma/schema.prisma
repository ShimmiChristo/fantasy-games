// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  USER
  ADMIN
}

enum BoardRole {
  OWNER
  ADMIN
  MEMBER
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  password      String
  firstName     String?
  lastName      String?
  role          Role          @default(USER)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  sessions      Session[]
  squares       Square[]
  boardsCreated Board[]       @relation("BoardsCreated")
  boardMembers  BoardMember[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model Board {
  id              String        @id @default(cuid())
  name            String
  createdByUserId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  createdBy User          @relation("BoardsCreated", fields: [createdByUserId], references: [id], onDelete: Cascade)
  members   BoardMember[]
  invites   BoardInvite[]
  squares   Square[]

  @@index([createdByUserId])
}

model BoardMember {
  boardId   String
  userId    String
  role      BoardRole @default(MEMBER)
  createdAt DateTime  @default(now())

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([boardId, userId])
  @@index([userId])
}

model BoardInvite {
  id        String   @id @default(cuid())
  boardId   String
  email     String
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId])
  @@index([email])
}

model Square {
  id        String   @id @default(cuid())
  row       Int
  col       Int
  userId    String?
  boardId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([boardId, row, col])
  @@index([userId])
  @@index([boardId])
}
